<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<Pane
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="controller.OrderItemController"
        prefHeight="472.0" prefWidth="765.0"
        styleClass="order-content-pane">

    <children>

        <GridPane layoutX="5.0" layoutY="10.0" prefHeight="310.0" prefWidth="191.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Id"/>
                <Label text="Product" GridPane.rowIndex="1"/>
                <Label text="Quantity" GridPane.rowIndex="2"/>
                <Label text="Price" GridPane.rowIndex="3"/>
                <Label text="Order" GridPane.rowIndex="4"/>

                <TextField fx:id="idTxt" GridPane.columnIndex="1"/>
                <ComboBox fx:id="productCmb" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField fx:id="quantityTxt" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <TextField fx:id="priceTxt" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <ComboBox fx:id="orderCmb" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </children>
        </GridPane>

        <TableView fx:id="orderItemTab" layoutX="220.0" layoutY="84.0" prefHeight="217.0" prefWidth="388.0">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="43.66668701171875" text="id"/>
                <TableColumn fx:id="productCol" prefWidth="85.33331298828125" text="Product"/>
                <TableColumn fx:id="quantityCol" prefWidth="97.66668701171875" text="Quantity"/>
                <TableColumn fx:id="priceCol" prefWidth="75.0" text="Price"/>
                <TableColumn fx:id="orderCol" prefWidth="87.0" text="Order"/>
            </columns>
        </TableView>

        <HBox layoutX="7.0" layoutY="329.0" prefHeight="60.0" prefWidth="208.0">
            <children>
                <Button fx:id="saveBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="69.0" text="Save"/>
                <Button fx:id="editBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="66.0" text="Edit">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="deleteBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="74.0" text="Delete">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>

    </children>
</Pane>
