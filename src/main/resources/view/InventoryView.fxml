<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<Pane
        prefHeight="416.0" prefWidth="562.0"
        styleClass="inventory-content-pane"
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="controller.InventoryController">

    <children>
        <GridPane layoutX="36.0" layoutY="36.0" prefHeight="219.0" prefWidth="184.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="id"/>
                <Label text="Product" GridPane.rowIndex="1"/>
                <Label text="Quantity" GridPane.rowIndex="2"/>
                <TextField fx:id="idTxt" GridPane.columnIndex="1"/>
                <TextField fx:id="quantityTxt" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <ComboBox fx:id="productCmb" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <TableView fx:id="inventoryTab" layoutX="237.0" layoutY="107.0" prefHeight="201.0" prefWidth="276.0">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="75.0" text="id"/>
                <TableColumn fx:id="productCol" prefWidth="91.66668701171875" text="product"/>
                <TableColumn fx:id="quantityCol" prefWidth="108.0" text="quantity"/>
            </columns>
        </TableView>
        <HBox layoutX="17.0" layoutY="338.0" prefHeight="74.0" prefWidth="272.0">
            <children>
                <Button fx:id="saveBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="79.0" text="Save"/>
                <Button fx:id="editBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="87.0" text="edit">
                    <HBox.margin>
                        <Insets left="15.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="deleteBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="86.0" text="delete">
                    <HBox.margin>
                        <Insets left="15.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</Pane>
