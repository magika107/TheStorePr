<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<Pane

        prefHeight="420.0"
        prefWidth="720.0"
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="controller.ProductController"
        styleClass="product-content-pane">

    <children>

        <GridPane layoutX="20.0" layoutY="20.0" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints prefWidth="80.0"/>
                <ColumnConstraints prefWidth="180.0"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints prefHeight="30.0"/>
                <RowConstraints prefHeight="30.0"/>
                <RowConstraints prefHeight="30.0"/>
                <RowConstraints prefHeight="30.0"/>
                <RowConstraints prefHeight="30.0"/>
                <RowConstraints prefHeight="30.0"/>
            </rowConstraints>

            <children>
                <Label text="Id" GridPane.rowIndex="0"/>
                <TextField fx:id="idTxt" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Title" GridPane.rowIndex="1"/>
                <TextField fx:id="titleTxt" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Brand" GridPane.rowIndex="2"/>
                <TextField fx:id="brandTxt" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Model" GridPane.rowIndex="3"/>
                <TextField fx:id="modelTxt" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="SerialNumber" GridPane.rowIndex="4"/>
                <TextField fx:id="serialNumberTxt" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="BuyPrice" GridPane.rowIndex="5"/>
                <TextField fx:id="buyPriceTxt" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            </children>
        </GridPane>

        <HBox layoutX="20.0" layoutY="320.0" spacing="15">
            <children>
                <Button fx:id="saveBtn" prefWidth="80" text="Save"/>
                <Button fx:id="editBtn" prefWidth="80" text="Edit"/>
                <Button fx:id="deleteBtn" prefWidth="80" text="Delete"/>
            </children>
        </HBox>

        <TableView fx:id="productTab" layoutX="320.0" layoutY="20.0"
                   prefHeight="320.0" prefWidth="380.0">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="50.0" text="Id"/>
                <TableColumn fx:id="titleCol" prefWidth="70.0" text="Title"/>
                <TableColumn fx:id="brandCol" prefWidth="70.0" text="Brand"/>
                <TableColumn fx:id="modelCol" prefWidth="90.0" text="Model"/>
                <TableColumn fx:id="serialNumberCol" prefWidth="100.0" text="SerialNumber"/>
            </columns>
        </TableView>

    </children>
</Pane>
