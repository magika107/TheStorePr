<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<Pane  styleClass="customer-content-pane"

       prefHeight="420.0"
       prefWidth="720.0"
       xmlns="http://javafx.com/javafx/8.0.171"
       xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="controller.CustomerController">

    <children>
        <GridPane layoutX="26.0" layoutY="23.0" prefHeight="256.0" prefWidth="249.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="id"/>
                <TextField fx:id="idTxt" GridPane.columnIndex="1"/>

                <Label text="Name" GridPane.rowIndex="1"/>
                <TextField fx:id="nameTxt" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Family" GridPane.rowIndex="2"/>
                <TextField fx:id="familyTxt" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="BirthDate" GridPane.rowIndex="3"/>
                <DatePicker fx:id="datePick" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="PhoneNumber" GridPane.rowIndex="4"/>
                <TextField fx:id="phoneTxt" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Gender" GridPane.rowIndex="5"/>
                <ComboBox fx:id="genderCombo" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            </children>
        </GridPane>

        <HBox layoutX="14.0" layoutY="306.0" prefHeight="40.0" prefWidth="273.0" spacing="20">
            <children>
                <Button fx:id="saveBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="70.0" text="Save"/>
                <Button fx:id="deleteBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="77.0" text="Delete"/>
                <Button fx:id="editBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="76.0" text="Edit"/>
            </children>
        </HBox>

        <TableView fx:id="customerTab" layoutX="289.0" layoutY="100.0" prefHeight="227.0" prefWidth="342.0">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="75.0" text="Id"/>
                <TableColumn fx:id="nameCol" prefWidth="111.6666259765625" text="Name"/>
                <TableColumn fx:id="familyCol" prefWidth="154.3333740234375" text="Family"/>
            </columns>
        </TableView>
    </children>
</Pane>
